<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/haruna"
    android:layout_height="match_parent"
    tools:context="thel0neshadow.daijoubou_clock.MainActivity"
    android:layout_width="match_parent">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
        android:textSize="85dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="@string/alarm_off_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alerts_off"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_alignBaseline="@+id/alerts_on"
        android:layout_alignBottom="@+id/alerts_on"
        android:layout_toStartOf="@+id/update_text"/>

    <Button
        android:text="@string/alarm_on_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/alerts_on"
        android:elevation="0dp"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/update_text"/>

    <TextView
        android:text="Daijoubou?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_text"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/alerts_on"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
